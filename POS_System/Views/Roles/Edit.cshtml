@model POS_System.Models.ApplicationRole
@{
    ViewData["Title"] = "Roles";
}
<div class="card">

    <div class="card-body">
        <h4 class="card-title">Update Role</h4>
        <div class="basic-form">
            <form asp-action="Update" asp-controller="Roles" method="post">
                <input asp-for="Id" type="hidden" />
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" asp-for="RoleName" placeholder="Role Name" spellcheck="false" data-ms-editor="true">
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" asp-for="Description" placeholder="Description" spellcheck="false" data-ms-editor="true">
                    </div>
                </div>
                <div class="form-group ml-4">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input mr-3" />
                    <label asp-for="IsActive">Is Active</label>

                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 float-lg-right">
                    <button type="submit" class="btn btn-sm btn-success">
                        Save Change
                    </button>
                    <a asp-action="Index" class="btn btn-sm btn-danger">Cancel</a>

                </div>
            </form>
        </div>
    </div>
</div>